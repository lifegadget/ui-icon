{{#if (or padding height)}}
  <span class="icon-padding" style={{stylist}}>
    <i
      id={{elementId}}
      class="ui-icon {{fontFamily}}{{_fw}}{{_icon}}{{_mood}}{{_pulse}}{{_spin}}{{_pointer}}"
      onclick={{action 'onClick'}}
    ></i>
  </span>
{{else}}
  <i
    id={{elementId}}
    style={{stylist}}
    class="ui-icon {{fontFamily}}{{_fw}}{{_icon}}{{_mood}}{{_pulse}}{{_spin}}{{_pointer}}"
    onclick={{action 'onClick'}}
  ></i>
{{/if}}
